extends ../../layout

block content
  #postPage
    .post
      h2.post-title=share_item.headline
      .post-info
        | 发布时间:
        span.head=formatDate(share_item.date) 
        | 发布者:
        span.head=share_item.author
      img(alt=share_item.headline, src=share_item.path) 
      .post-content!=share_item.contents